@using MushroomForum.ViewModels
@model CombinedRankingViewModel



<h2>Twoja pozycja w rankingu</h2>

@if (Model.YourRanking.Position > 0)
{
    <p>Jesteś na miejscu: <strong>@Model.YourRanking.Position</strong></p>
    <p>Masz <strong>@Model.YourRanking.Points</strong> punktów.</p>
}
else
{
    <p>Nie posiadasz jeszcze punktów w rankingu.</p>
}

<table class="table">
    <thead>
        <tr>
            <th>Miejsce</th>
            <th>Nazwa użytkownika</th>
            <th>Punkty</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.FullRanking.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.FullRanking[i].UserName</td>
                <td>@Model.FullRanking[i].Points</td>
            </tr>
        }
    </tbody>
</table>
