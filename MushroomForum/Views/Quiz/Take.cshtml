@model MushroomForum.Models.Quiz

@{
    ViewData["Title"] = "Rozwiązywanie quizu: " + Model.Tytul;
}

<h2>@Model.Tytul</h2>

<form asp-action="Take" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        var question = Model.Questions.ElementAt(i);
        <div>
            <h4>Pytanie @(i + 1): @question.Tresc</h4>
            @foreach (var answer in question.Answers)
            {
                <div>
                    <input type="checkbox" name="selectedAnswers" value="@answer.Id" id="answer_@answer.Id" />
                    <label for="answer_@answer.Id">@answer.Tresc</label>
                </div>
            }
        </div>
        <hr />
    }

    <button type="submit">Zatwierdź odpowiedzi</button>
</form>
