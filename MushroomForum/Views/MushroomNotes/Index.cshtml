@model IEnumerable<MushroomForum.Models.MushroomNotes>

@{
    ViewData["Title"] = "Index";
}

<h1>Twoje notatki</h1>

<p>
    <a asp-action="Create" class="button-green">Stwórz notatkę</a>
</p>

<div class="note-list">
    @foreach (var item in Model)
    {
        <div class="note-item card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Content</p>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            ...
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                            <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this note?');">Delete</a></li>
                        </ul>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(item.PhotoUrl))
                {
                    <img src="@item.PhotoUrl" alt="Notatka" class="img-fluid mt-2" />
                }
                <small class="text-muted">Stworzono: @item.CreateDate</small>
            </div>
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
