@model MushroomForum.Models.MushroomNotes

@{
    ViewData["Title"] = "Szczegóły notatki";
}

<h1 class="mb-4">Szczegóły notatki</h1>

<div class="card mb-3" style="max-width: 600px;">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">@Model.Title</h5>
    </div>
    <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">Data utworzenia: @Model.CreateDate.ToString("yyyy-MM-dd")</h6>

        <p class="card-text">@Model.Content</p>

        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
        {
            <img src="@Model.PhotoUrl" alt="Zdjęcie notatki" class="img-fluid rounded mt-3" style="max-height: 300px;" />
        }
    </div>
</div>

<div class="mb-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>
