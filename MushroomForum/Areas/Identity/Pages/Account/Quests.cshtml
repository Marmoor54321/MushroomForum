@page
@model MushroomForum.Areas.Identity.Pages.Account.QuestsModel
@{
    ViewData["Title"] = "Twoje Daily Questy";
    ViewData["ActivePage"] = "Quests";
}

<h3>@ViewData["Title"]</h3>
<p>Dzisiaj: @DateTime.UtcNow.DayOfWeek</p>

@if (Model.TodayQuests.Count == 0)
{
    <p>Brak questów na dzisiaj.</p>
}
else
{
    <ul class="list-group">
        @foreach (var quest in Model.TodayQuests)
        {
            <li class="list-group-item">
                <strong>@quest.Description</strong> <br />
                Nagroda: <span class="badge bg-success">50 XP</span>
            </li>
        }
    </ul>
}
